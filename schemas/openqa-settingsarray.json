{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "openqa-settingsarray.json",
  "title": "openQA settings array schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "key",
      "value"
    ],
    "properties": {
      "key": {
        "type": "string",
        "pattern": "^[+]?[A-Z0-9_].*$"
      },
      "value": { "type": [ "string", "number" ] }
    },
    "additionalProperties": false
  }
}
