{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "openqa-machine.json",
  "title": "Upstream openQA single machine schema",
  "type": "object",
  "required": [
    "name",
    "backend",
    "settings"
  ],
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "backend": { "type": "string" },
    "settings": { "$ref": "openqa-settingsarray.json" }
  },
  "additionalProperties": false
}
